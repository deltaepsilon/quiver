{
  "name": "@quiver/firebase-authentication",
  "version": "0.1.0",
  "license": "MIT",
  "main": "./dist/index.js",
  "scripts": {
    "start": "parcel src/index.html --hmr-port 34057",
    "demo": "parcel src/demo.html --hmr-port 34057",
    "build": "rm -rf dist && parcel build src/firebase-authentication.js && parcel build src/custom-element.js && parcel build src/index.js",
    "test": "jest --watch"
  },
  "eslintConfig": {
    "extends": "eslint-config-synacor"
  },
  "eslintIgnore": [
    "build/*"
  ],
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-jest": "^21.2.0",
    "babel-plugin-transform-object-assign": "^6.22.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-preact": "^1.1.0",
    "babel-preset-stage-0": "^6.24.1",
    "chai": "^4.1.2",
    "eslint": "^4.5.0",
    "eslint-config-synacor": "^1.1.0",
    "html-looks-like": "^1.0.3",
    "identity-obj-proxy": "^3.0.0",
    "if-env": "^1.0.0",
    "jest": "^21.2.1",
    "node-sass": "^4.7.2",
    "parcel-bundler": "^1.5.1",
    "preact-custom-element": "^2.0.0",
    "preact-jsx-chai": "^2.2.1",
    "preact-test-utils": "^0.1.3",
    "regenerator-runtime": "^0.11.1",
    "sass-loader": "^6.0.6"
  },
  "dependencies": {
    "SuperTinyIcons": "https://github.com/edent/SuperTinyIcons.git",
    "email-validator": "^1.1.1",
    "linkstate": "^1.1.0",
    "preact": "^8.2.1",
    "preact-compat": "^3.17.0",
    "preact-material-components": "^1.3.2",
    "simple-country-dial-codes": "https://github.com/xxxdepy/simple-country-dial-codes.git"
  },
  "jest": {
    "setupFiles": [
      "./jest-setup.js"
    ],
    "testURL": "http://localhost:8080",
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less|scss)$": "identity-obj-proxy",
      "^react$": "preact-compat",
      "^react-dom$": "preact-compat"
    },
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(@material|preact-material-components))"
    ]
  }
}
